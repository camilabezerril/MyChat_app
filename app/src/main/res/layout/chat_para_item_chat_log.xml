<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_chat_para_item_chat_log"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/textview_mensagem_chat_para_item_chat_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_editortext"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:layout_marginEnd="8dp"
        android:text="qualquer text"
        app:layout_constraintEnd_toStartOf="@+id/imageview_chat_para_item_chat_log"
        app:layout_constraintTop_toTopOf="@+id/imageview_chat_para_item_chat_log" />

</androidx.constraintlayout.widget.ConstraintLayout>